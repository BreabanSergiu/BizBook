<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="1018.0" style="-fx-background-color: linear-gradient(#BBD2C5,#536976,#3b4160)" stylesheets="@../css/acountUser.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.controller.AccountUserController">
    <children>
        <Button fx:id="buttonAddFriendship" layoutX="838.0" layoutY="38.0" mnemonicParsing="false" onMouseClicked="#addFriendshipRequest" prefHeight="46.0" prefWidth="158.0" text="Add friendship Request" />
        <Button fx:id="buttonDeleteFriendship" layoutX="838.0" layoutY="121.0" mnemonicParsing="false" onMouseClicked="#deleteFriendship" prefHeight="46.0" prefWidth="158.0" text="Delete friendship" />
        <Label fx:id="labelUserName" alignment="CENTER" layoutX="42.0" layoutY="15.0" prefHeight="46.0" prefWidth="354.0" text="NameUser">
            <font>
                <Font size="22.0" />
            </font></Label>

      <Button fx:id="buttonFriendshipRequest" layoutX="838.0" layoutY="209.0" mnemonicParsing="false" onMouseClicked="#viewFriendshipRequest" prefHeight="46.0" prefWidth="158.0" text="View Friendship Request" />
      <Button fx:id="butonMessages" layoutX="838.0" layoutY="298.0" mnemonicParsing="false" onMouseClicked="#viewMessages" prefHeight="46.0" prefWidth="158.0" text="Messages" />
      <Button fx:id="buttonReports" layoutX="838.0" layoutY="384.0" mnemonicParsing="false" onMouseClicked="#showReports" prefHeight="46.0" prefWidth="158.0" text="reports" />
      <TabPane layoutX="404.0" layoutY="119.0" prefHeight="288.0" prefWidth="412.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Friends">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                          <TableView fx:id="tableViewFriends" prefHeight="252.0" prefWidth="412.0">
                              <columns>
                                    <TableColumn fx:id="tableColumnFirstNameFriends" prefWidth="205.0" text="First name" />
                                    <TableColumn fx:id="tableColumnLastNameFriends" prefWidth="204.0" text="Last name" />
                              </columns>
                          </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Messages">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tableViewMessages" prefHeight="256.0" prefWidth="412.0">
                          <columns>
                            <TableColumn fx:id="tableColumnFromMessages" prefWidth="100.0" text="From" />
                            <TableColumn fx:id="tableColumnMessageMessages" prefWidth="212.0" text="Message" />
                              <TableColumn fx:id="tableColumnDataMessages" prefWidth="100.0" text="Sent Data" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Friendship Requests">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tableViewRequests" prefHeight="255.0" prefWidth="412.0">
                          <columns>
                            <TableColumn fx:id="tableColumnFromRequests" prefWidth="100.0" text="From" />
                            <TableColumn fx:id="tableColumnMessageRequests" prefWidth="212.0" text="Message" />
                              <TableColumn fx:id="tableColumnDataRequests" prefWidth="100.0" text="Sent Data" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>

    </children>
</AnchorPane>
