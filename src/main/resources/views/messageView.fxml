                     <children>
                        <TableView fx:id="tableViewInbox" layoutX="30.0" layoutY="27.0" prefHeight="200.0" prefWidth="509.0">
                          <columns>
                            <TableColumn fx:id="tableColumnFirstName" prefWidth="95.0" text="FirstName" />
                            <TableColumn fx:id="tableColumnLastName" prefWidth="94.0" text="LastName" />
                              <TableColumn fx:id="tableColumnDate" prefWidth="136.0" text="Date" />
                              <TableColumn fx:id="tableColumnMessage" prefWidth="183.0" text="Message" />
                          </columns>
                        </TableView>
                        <TextField fx:id="textFieldMessageInbox" layoutX="557.0" layoutY="27.0" prefHeight="27.0" prefWidth="190.0" promptText="message" />
                        <Button fx:id="buttonReply" layoutX="692.0" layoutY="63.0" mnemonicParsing="false" onMouseClicked="#replyMessage" text="reply" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>

      <Button fx:id="buttonSignOff" layoutX="771.0" layoutY="414.0" mnemonicParsing="false" onMouseClicked="#exitButtonOnAction" text="Sign off" />

   </children>
